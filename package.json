    "typescript": "next"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^14.0.0",
    "istanbul": "^0.4.1",
    "karma": "^2.0.0",
    "karma-browserify": "^5.0.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-detect-browsers": "2.2.6",
    "karma-env-preprocessor": "^0.1.1",
